@*<body class="bg-gradient-primary">*@
<body>
    <div class="container">
        <div class="row justify-content-center account-pages mt-5 mb-5">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card shadow-none">

                    <div class="card-body p-3">

                        <div class="text-center w-75 m-auto">
                            <div class="auth-logo">
                                <a href="index.html" class="logo logo-dark text-center">
                                    <span class="logo-lg">
                                        <img src="~/img/snr.png" alt="" height="100">
                                    </span>
                                </a>

                                <a href="index.html" class="logo logo-light text-center">
                                    <span class="logo-lg">
                                        <img src="assets/images/logo-light.png" alt="" height="22">
                                    </span>
                                </a>
                            </div>
                            <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
                        </div>

                        <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post" class="user">
                            <div class="input-group border mb-3" style="border-radius: 10rem;">
                                <input id="txtUserName" type="text" name="username" placeholder="Employee Number" class="form-control form-control-user" />
                              @*   <div class="input-group-append">
                                    <div style="border-radius: 0rem 10rem 10rem 0rem; margin-top:4px;" class="pt-2 px-2" id="">
                                        <span style="cursor: default; font-size: .8rem;">@@snrshopping.com</span>
                                    </div>
                                </div> *@
                            </div>


                            <div class="input-group border" style="border-radius: 10rem;">
                                <input type="password" name="password" placeholder="Password" id="txtPassword" class="form-control form-control-user border-0" />
                                <div class="input-group-append hover-effect">
                                    <button class="btn " style="border-radius: 0rem 10rem 10rem 0rem;" id="btnShowPassword" type="button">
                                        <span class="bi bi-eye"></span>
                                    </button>
                                </div>
                            </div>






                            @*<select id="selectException" class="form-select border mt-3 p-2" style="border-radius: 10rem;">
                            <option value="" disabled selected hidden>Choose type of user...</option>
                            <option value="OMS">OMS</option>
                            <option value="Runner">Runner</option>
                            <option value="Picker">Picker</option>
                            <option value="Packer">Packer</option>
                            </select>*@

                            <select id="selectException" name="selectapp" class="form-select border mt-3 p-2" style="border-radius: 10rem;">
                                @if (Model != null && Model.Options != null)
                                {
                                    foreach (var option in Model.Options)
                                    {
                                        <option value="@option.Value">
                                            @option.Text
                                        </option>
                                    }
                                }
                                else
                                {
                                    <option value="0">Please Choose App</option>
                                }
                            </select>




                            <div class="form-group">
                                <input type="checkbox" name="isActiveDirectory" class="m-lg-2 form-control-user" /><font style="font-size:13px;"> Active Directory</font>
                            </div>
                            <input type="submit" value="login" class="btn btn-primary btn-user btn-block" />
                        </form>
                        @if (!string.IsNullOrEmpty(error))
                        {
                            @if (error == "inactive")
                            {
                                <div class="alert alert-danger" style="margin-top:2%;">
                                    <strong>Failed to Login!</strong> Inactive user.
                                </div>
                            }
                            else if (error == "maxfailedattempts")
                            {
                                <div class="alert alert-danger" style="margin-top:2%;">
                                    <strong>Failed to Login!</strong> Account locked due to failed attempts.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger" style="margin-top:2%;">
                                    <strong>Failed to Login!</strong> Please input correct Employee Number and Password.
                                </div>
                            }
                        }



                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
