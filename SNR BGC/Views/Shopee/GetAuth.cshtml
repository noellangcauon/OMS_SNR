@model string
@{

    Layout = "~/Views/Shared/CodefoxLayout.cshtml";

}

@Model
<!-- Content Column -->
<div class="container-fluid">
    <div class="col-lg-12 mb-4">

        <div class="page-title-box">
            <h3 class="m-0 font-weight-bold text-primary">Shopee Auth Infomation</h3><br />
          
        </div>
        <div class="card card-primary card-outline">
            <div class="card-body">
                <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                    <div class="input-group">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-danger" onclick="generateCodes()">Generate Codes</button>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div>Link</div>
                        <div class="col-12">
                            <input class="form-control" style="width:350%;" id="txtAuth" />
                        </div>
                        <div class="col-12">
                            <button type="button" class="btn btn-primary mt-1" onclick="saveAuth()">Save Auth</button>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-bordered" id="authTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="white-space: nowrap;">Token ID</th>
                                <th style="white-space: nowrap;">Token Code</th>
                                <th style="white-space: nowrap;">Access Token</th>
                                <th style="white-space: nowrap;">Refresh Token</th>


                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.AuthInfo == null)
                            {
                                <tr>
                                    <td colspan="9" style="text-align:center">
                                        No Token Available!
                                    </td>
                                </tr>
                            }
                            else
                            {

                                @foreach (var tokenInfo in (IEnumerable<AuthClass>)ViewData["AuthInfo"])
                                {

                                    <tr>
                                        <td>@tokenInfo.ids</td>
                                        <td>@tokenInfo.authCode</td>
                                        <td>@tokenInfo.dateEntry</td>
                                        <td>@tokenInfo.module</td>

                                    </tr>


                                }

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
       
       
    </div>
</div>


@section Scripts {
    <script>
        $("#ribbonTag").text("Lazada Token")
    </script>
    @*
    <script src="@Url.Content("~/Scripts/Token.js")" type="text/javascript"></script>*@
    <script src="~/Scripts/GetAuth.js" type="text/javascript"></script>
    <link href="~/lib/dataTables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/dataTables/DataTables-1.11.5/css/dataTables.jqueryui.min.css" rel="stylesheet" type="text/css" />


}