@{
    var error = TempData["Error"] as string;
    Layout = "~/Views/Shared/CodefoxLayout.cshtml";
}


<!-- Content Column -->

<section class="section">
    <div class="container-fluid">
        <div class="page-title-box">
            <h3 class="m-0 font-weight-bold text-primary">NOF ITEMS</h3><br />
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        @* <h3 class="m-0 font-weight-bold text-primary">NOF ITEMS</h3><br />*@
                        <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                            <div class="tab-pane fade show active" id="nofItemsDiv" role="tabpanel">
                                <table class="table table-sm text-sm nowrap w-100 table-bordered table-striped" id="nofItems">
                                    <thead>
                                        <tr>

                                            <th style="white-space: nowrap; color: blue;"><input type="checkbox" id="chkAll" /></th>
                                            <th style="white-space: nowrap; color: blue;">SKU</th>
                                            <th style="white-space: nowrap; color: blue;">Description</th>
                                            <th style="white-space: nowrap; color: blue;">Quantity</th>
                                            <th style="white-space: nowrap; color: blue;">217 Inventory</th>
                                            <th style="white-space: nowrap; color: blue;">Date Process</th>
                                            <th style="white-space: nowrap; color: blue;">Remarks</th>
                                        </tr>
                                    </thead>
                                    <tbody id="nofItems-tbody"></tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-lg-1">
                                    <button type="button" id="clearItem" class="btn btn-primary mb-lg-3" data-bs-toggle="tooltip" data-bs-placement="left" data-toggle="modal" data-target="#clearItemModal"> Clear Items</button>
                                </div>
                                <div class="col-lg-1" style="margin-left: -28px;">
                                    <button type="button" id="updateItem" class="btn btn-warning mb-lg-3" data-bs-toggle="tooltip" data-bs-placement="left" data-toggle="modal" data-target="#updateItemModal"> Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<div class="modal fade bd-example-modal-lg" id="clearItemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Clear Item(s)</h5>
                <button class="close" onclick="cancel()" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Are you sure you want to clear this item(s)?</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" onclick="cancel()" data-dismiss="modal">Cancel</button>
                <button id="logout" type="button" onclick="getCheckItems()" class="btn btn-primary" data-dismiss="modal">Clear</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-lg" id="updateItemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Clear Item(s)</h5>
                <button class="close" onclick="cancel()" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Are you sure you want to update this item(s)?</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" onclick="cancel()" data-dismiss="modal">Cancel</button>
                <button id="logout" type="button" onclick="getCheckItemsUpdate()" class="btn btn-primary" data-dismiss="modal">Update</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="ActivateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Activate User</h5>
                <button class="close" onclick="cancelActivate()" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Are you sure you want to activate this user?</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" onclick="cancelActivate()" data-dismiss="modal">Cancel</button>
                <button id="logout" type="button" onclick="ActivateUser()" class="btn btn-primary" data-dismiss="modal">Activate</button>
            </div>
        </div>
    </div>
</div>
